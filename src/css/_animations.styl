/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transform: translateX(-120%) rotate(1000deg)
  transition all 0.5s
  max-height: 0
  padding 0 !important
  &.order-enter-active
    max-height 60px
    transform: translateX(0) rotate(0deg)
    padding 2rem 0 !important

.order-leave
  transition all 0.5s
  transform: translateX(0)
  &.order-leave-active
    transform: translateX(120%)
    max-height: 0
    padding: 0

.count-enter
  transition all .25s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-leave
  transform translateY(0)
  transition all .25s
  position absolute
  left 0
  bottom 0
  &.count-leave-active
    transform translateY(-100%)
